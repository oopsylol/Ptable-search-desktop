{
  "name": "ptable",
  "version": "1.0.0",
  "description": "元素周期表查询桌面应用",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "electron": "cross-env NODE_ENV=development electron .",
    "electron-dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-build": "npm run build && electron .",
    "dist": "npm run build && electron-builder",
    "dist:win": "npm run build && electron-builder --win",
    "dist:mac": "npm run build && electron-builder --mac",
    "dist:linux": "npm run build && electron-builder --linux",
    "pack": "npm run build && electron-builder --dir",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "electron",
    "react",
    "typescript",
    "periodic-table",
    "chemistry",
    "desktop-app",
    "elements",
    "chemical-elements",
    "science",
    "education",
    "vite",
    "tailwindcss",
    "i18n",
    "cross-platform",
    "windows",
    "mac",
    "linux",
    "search",
    "query",
    "atomic-number",
    "element-properties",
    "chemistry-tool",
    "student-tool",
    "learning",
    "reference"
  ],
  "author": "PTable Team",
  "license": "MIT",
  "dependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.2",
    "auto-launch": "^5.0.6",
    "autoprefixer": "^10.4.21",
    "i18next": "^25.4.2",
    "postcss": "^8.5.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-i18next": "^15.7.3",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.1",
    "cross-env": "^10.0.0",
    "electron": "^37.4.0",
    "electron-builder": "^26.0.12",
    "tailwindcss": "^3.4.17",
    "wait-on": "^8.0.4"
  },
  "build": {
    "appId": "com.ptable.desktop",
    "productName": "PTable",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/**/*",
      "package.json",
      "!**/node_modules/**/*",
      "!**/.git/**/*",
      "!**/src/**/*",
      "!**/.trae/**/*",
      "!**/README.md",
      "!**/tsconfig.json",
      "!**/vite.config.ts",
      "!**/tailwind.config.js",
      "!**/postcss.config.js"
    ],
    "extraResources": [
      {
        "from": "assets",
        "to": "assets"
      }
    ],
    "compression": "maximum",
    "removePackageScripts": true,
    "removePackageKeywords": true,
    "asar": {
      "smartUnpack": true
    },
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "compression": "maximum",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.png",
      "category": "public.app-category.education"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png",
      "category": "Education"
    }
  }
}
